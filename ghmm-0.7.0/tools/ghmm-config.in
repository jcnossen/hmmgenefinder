usage()
{
        cat <<EOF
Usage: ghmm-config [OPTIONS]
Options:
        [--prefix]
        [--exec-prefix]
        [--lib-prefix]
        [--version]
        [--libs]
        [--cflags]
        [--copyright]
        [--help]
EOF
        exit $1
}

if test $# -eq 0; then
        usage 1 1>&2
fi

prefix=@prefix@
exec_prefix=@exec_prefix@

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix)
      echo ${prefix}
      ;;
    --exec-prefix)
      echo ${exec_prefix}
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      echo @CFLAGS@ -I${prefix}/include
      ;;
    --libs)
      echo -L${prefix}/lib -lghmm @LIBS@
      ;;
    --lib-prefix)
      echo ${prefix}/lib
      ;;
    --copyright)
      copyright
      ;;
    --help)
      usage 0
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

